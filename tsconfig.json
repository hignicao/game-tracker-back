{
	"compilerOptions": {
		"target": "es2020",
		"module": "commonjs",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"outDir": "dist",
		"baseUrl": "src",
		"paths": {
			"@/*": ["*"]
		},
		"plugins": [
			{
				"transform": "typescript-transform-paths"
			}
		]
	},
	"ts-node": {
		"esm": true
	}
}
